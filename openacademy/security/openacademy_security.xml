<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">

        <record id="group_openacademy_student" model="res.groups">
        	<field name="name">Student</field>
        	<field name="category_id" ref="base.module_category_academy"/>
        	<field name="implied_ids" eval="[(4, ref('base.group_user'))]" />
        </record>

        <record id="group_openacademy_maester" model="res.groups">
        	<field name="name">Maester</field>
        	<field name="category_id" ref="base.module_category_academy"/>
        	<field name="implied_ids" eval="[(4, ref('group_openacademy_student'))]" />
        </record>

        <record id="group_openacademy_archmaester" model="res.groups">
        	<field name="name">Archmaester</field>
        	<field name="category_id" ref="base.module_category_academy"/>
        	<field name="implied_ids" eval="[(4, ref('group_openacademy_maester'))]" />
        	<field name="users" eval="[(4, ref('base.user_root'))]" />
        </record>

        <record id="rule_openacademy_maester_course" model="ir.rule">
        	<field name="name">Course: only manage your own course </field>
        	<field name="model_id" ref="model_openacademy_course" />
        	<field name="groups" eval="[(4, ref('group_openacademy_maester'))]"/>
        	<field name="domain_force">[('responsible_id', '=', user.id)]</field>
        	<field name="perm_read" eval="0"/>
            <field name="perm_write" eval="1"/>
            <field name="perm_create" eval="0"/>
            <field name="perm_unlink" eval="1"/>
        </record>

        <record id="rule_openacademy_archmaester_course" model="ir.rule">
        	<field name="name">Archmaesters can do everything </field>
        	<field name="model_id" ref="model_openacademy_course" />
        	<field name="groups" eval="[(4, ref('group_openacademy_archmaester'))]"/>
        	<field name="domain_force">[(1, '=', 1)]</field>
        </record>

        <record id="rule_openacademy_maester_session" model="ir.rule">
        	<field name="name">Only create a session for your courses</field>
        	<field name="model_id" ref="model_openacademy_session" />
        	<field name="groups" eval="[(4, ref('group_openacademy_maester'))]"/>
        	<field name="domain_force">[('course_id.responsible_id', '=', user.id)]</field>
        	<field name="perm_read" eval="0"/>
            <field name="perm_write" eval="1"/>
            <field name="perm_create" eval="1"/>
            <field name="perm_unlink" eval="1"/>
        </record>

        <record id="rule_openacademy_student_contact" model="ir.rule">
        	<field name="name">Students can only see their own infos</field>
        	<field name="model_id" ref="model_res_partner" />
        	<field name="groups" eval="[(4, ref('group_openacademy_student'))]"/>
        	<field name="domain_force">[('id', '=', user.id)]</field>
        </record>
    </data>

</odoo>
