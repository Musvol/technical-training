<?xml version="1.0"?>
<odoo>
<template id="openacademy.session_invite_report_template">
<t t-call="web.html_container" >
<t t-foreach="docs" t-as="doc">
    <t t-call="web.internal_layout" >
        <t t-foreach="doc.attendee_ids" t-as="attendee">
            <div class="page" style="page-break-after: always">
                <div class="row">
                    <div name="attendee_address" class="col-xs-5 col-xs-offset-7">
                        <address t-esc="attendee" t-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;, &quot;name&quot;], &quot;no_marker&quot;: True}"/>
                    </div>
                </div>

                <h1>Session invitation to <span t-field="attendee.name" /></h1>
                <h2 t-field="doc.name" />
                
                <p>From <span t-field="doc.start_date" /></p>
                <p>To <span t-field="doc.end_date" /></p>
                <p>Given by <span t-field="doc.instructor_id" /></p>
                <img t-att-src="'/report/barcode/QR/%s' % 'attendee.name'"/>
            </div>
        </t>
    </t>
</t>
</t>

</template>
</odoo>
