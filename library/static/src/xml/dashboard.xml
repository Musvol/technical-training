<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

<div t-name="LibraryDashboard" class="o_library">
    <div class="o_statistics">
        <div>Money in this month: <t t-esc="widget.stats.money_in"/> €</div>
        <div>Number of rentals this month: <t t-esc="widget.stats.nb_rentals"/></div>
        <div>Number of books lost this month: <t t-esc="widget.stats.nb_lost_books"/></div>
        <div>Money lost due to lost books this month: <t t-esc="widget.stats.money_lost"/> €</div>
    </div>
    <div class="o_fancy_chart"/>
</div>

<div t-name="LibraryDashboard.Buttons">
    <button type="button" class="btn btn-primary o_lost_books">Lost Books</button>
    <button type="button" class="btn btn-primary o_bad_customers">Bad Customers</button>
</div>

<t t-name="LibraryWarning">
    <div t-attf-class="alert alert-{{type}}" role="alert">
	  This customer owes <t t-esc="amount" /> €
	</div>
</t>

<t t-name="LibraryCustomer.Buttons">
    <button type="button" class="btn btn-default o_geolocalize">Geolocalize</button>
    <button type="button" class="btn btn-default o_pay_amount_owed">Pay Amount Owed</button>
</t>

<li t-name="Scan" class="o_debug_manager" style="color: black;">
    <input type="input" placeholder="scan" class=".o_scan_input" />
</li>

<div t-name="AppSwitcherPromo" class="alert alert-primary" role="alert">
  Don't forget the Monday Promos !
</div>

<div t-name="CustomerList" class="o_kanban_group">
    <div class="o_kanban_header">
        <div class="o_kanban_header_title">
            <span class="o_column_header">Customers</span>
        </div>
    </div>
    <table class="o_list_view table table-condensed table-striped o_list_view_ungrouped"> 
        <t t-foreach="customers" t-as="customer">
            <tr t-attf-class="o_data_row o_customer #{selected === customer.id ? 'o_active_customer': ''}" >
                <td class="o_data_cell" t-att-id='customer.id'> <t t-esc="customer.display_name"/> <t t-if="selected === customer.id">&lt;</t></td>
            </tr>
        </t>
        
    </table>
</div>

</templates>
